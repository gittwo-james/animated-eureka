# Application
APP_ENV=development
APP_PORT=8080
LOG_LEVEL=info

# Auth
JWT_ACCESS_SECRET=dev-access-secret-change-me
JWT_REFRESH_SECRET=dev-refresh-secret-change-me
JWT_ISSUER=citadel-drive
AUTH_PEPPER=dev-pepper-change-me
TOTP_ISSUER=Citadel Drive

# Database (either provide DATABASE_URL or the individual DB_* fields)
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=citadel_drive
DB_SSLMODE=disable
DB_TIMEZONE=UTC
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25

# Optional
AUTO_MIGRATE=false
METRICS_ENABLED=true

# Cloudflare R2 (S3-compatible)
# Example endpoint: https://<accountid>.r2.cloudflarestorage.com
R2_ENDPOINT=
R2_REGION=auto
R2_BUCKET=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_PRESIGN_TTL_SECONDS=900
R2_MAX_ATTEMPTS=5

# Files
FILE_ALLOWED_TYPES=application/pdf,image/png,image/jpeg,text/plain
FILE_MAX_VERSIONS=50
FILE_MULTIPART_PART_SIZE_MB=10
FILE_MULTIPART_PRESIGN_BATCH_SIZE=100
